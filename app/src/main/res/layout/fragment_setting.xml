<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp"
    tools:context="sos.rock.sosapp.Main.Setting.SettingFragment">

    <TextView
        style="@style/headerTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:gravity="center"
        android:text="@string/setting"
        android:textSize="@dimen/font_head_text"
        android:textAlignment="gravity"
        android:textColor="@color/icons" />

    <Button
        android:id="@+id/btDistanceWay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_continue"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dimen_30dp"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:text="@string/distance"
        android:textColor="@color/icons"
        android:textAlignment="gravity"
        android:textAllCaps="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp"
        android:background="@color/divider" />

    <Button
        android:id="@+id/btContactLists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_continue"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dimen_30dp"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:text="@string/contacts_restriction"
        android:textColor="@color/icons"
        android:textAlignment="gravity"
        android:textAllCaps="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp"
        android:background="@color/divider" />

    <Button
        android:id="@+id/btExtraNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_continue"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dimen_30dp"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/dimen_20dp"
        android:text="@string/extra_number"
        android:textColor="@color/icons"
        android:textAlignment="gravity"
        android:textAllCaps="false" />


</LinearLayout>
