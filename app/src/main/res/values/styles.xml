<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="headerTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="inputTextStyle">
        <item name="android:textColorHint">@color/tint_color</item>
        <item name="android:background">@drawable/login_edit_background</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_20dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_20dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/font_samll_medium_text</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/font_samll_medium_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="friendPhoneText">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">@dimen/font_samll_medium_text</item>
        <item name="android:layout_margin">@dimen/dimen_3dp</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:background">@drawable/grident_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="linkButtonStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/font_medium_text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_margin">@dimen/dimen_5dp</item>
    </style>

    <style name="contentTextStyle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/font_medium_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/dimen_5dp</item>
    </style>

</resources>
